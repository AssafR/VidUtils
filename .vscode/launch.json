{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug test_file.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_file.py",
            "args": [
                "E:\\Sample_Video_Static.mkv"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Debug test_file.py (sample video)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_file.py",
            "args": [
                "E:\\Sample_Video_Static.mkv"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}